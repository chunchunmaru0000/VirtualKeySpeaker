<Window x:Class="VirtualKeySpeaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualKeySpeaker"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False"
        Height="80" Width="1920"
        Focusable="False"
        IsHitTestVisible="False"
        WindowStartupLocation="Manual" Background="#00FFFFFF"
        >
    <Grid IsHitTestVisible="False"
          Focusable="False">
        <Label x:Name="outLabel" 
               Content="Label" 
               HorizontalContentAlignment="Right"
               HorizontalAlignment="Right" 
               FontFamily="Cascadia Code" FontSize="50"
               VerticalAlignment="Bottom"
               Foreground="#FF000000"
               Background="#20FFFFFF"
               Focusable="False"
               IsHitTestVisible="False"
               />
    </Grid>
</Window>
