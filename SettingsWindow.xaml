<Window x:Class="VirtualKeySpeaker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualKeySpeaker"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="335"
        FontFamily="Cascadia Code" Background="#FF2B2B2B"
        ShowInTaskbar="True"
        Closed="Window_Closed"
        StateChanged="Window_StateChanged"
        >

    <Grid>
        <Label 
            Content="Micro" 
            HorizontalAlignment="Left" Height="30" 
            Margin="0,0,0,0" VerticalAlignment="Top" Width="163"
            FontSize="16"
            Foreground="Linen"
            />
        <ComboBox 
            DropDownOpened="microsBox_DropDownOpened"
            SelectionChanged="microsBox_SelectionChanged"
            x:Name="microsBox"
            HorizontalAlignment="Left" Height="30" 
            Margin="0,30,0,0" 
            VerticalAlignment="Top" Width="290"
            FontSize="16" Background="#FF585858" BorderBrush="#FF252525"
            />
        <Rectangle 
            x:Name="microRect"
            Width="20" Height="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="295,35,0,0"
            Fill="LightCoral"
            StrokeThickness="2"
            Stroke="Black"
            ></Rectangle>

        <Label 
            Content="System speaker" 
            HorizontalAlignment="Left" Height="30" 
            Margin="0,60,0,0" VerticalAlignment="Top" Width="163"
            FontSize="16"
            Foreground="Linen"
            />
        <ComboBox 
            DropDownOpened="speakersBox_DropDownOpened"
            SelectionChanged="speakersBox_SelectionChanged"
            x:Name="speakersBox"
            HorizontalAlignment="Left" Height="30" 
            Margin="0,90,0,0" 
            VerticalAlignment="Top" Width="290"
            FontSize="16" Background="#FF585858" BorderBrush="#FF252525"
            />
        <Rectangle 
            x:Name="speakerRect"
            Width="20" Height="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="295,95,0,0"
            Fill="LightCoral"
            StrokeThickness="2"
            Stroke="Black"
            ></Rectangle>

        <Label 
            Content="Language speaks" 
            HorizontalAlignment="Left" Height="30" 
            Margin="0,120,0,0" VerticalAlignment="Top" Width="163"
            FontSize="16"
            Foreground="Linen"
            />
        <ComboBox 
            IsEditable="True"
            SelectionChanged="langBox_SelectionChanged"
            x:Name="langBox"
            HorizontalAlignment="Left" Height="30" 
            Margin="0,150,0,0" 
            VerticalAlignment="Top" Width="290"
            FontSize="16" Background="#FF585858" BorderBrush="#FF252525"
            />

        <Label 
            x:Name="keyLabel"
            Content="Speak key: RControl" 
            HorizontalAlignment="Left" Height="30" 
            Margin="0,180,0,0" VerticalAlignment="Top" Width="290"
            FontSize="16"
            Foreground="Linen"
            />
        <Button
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="30" Width="290"
            Margin="0,210,0,0"
            FontSize="16"
            Content="Press to select and press key"
            Click="SelectKey"
            ></Button>
    </Grid>
</Window>
